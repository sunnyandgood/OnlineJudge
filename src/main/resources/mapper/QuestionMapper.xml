<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.mapper.QuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.edu.bean.Question">
        <id column="question_id" property="questionId" />
        <result column="question_chapter" property="questionChapter" />
        <result column="question_difficult" property="questionDifficult" />
        <result column="question_title" property="questionTitle" />
        <result column="question_time" property="questionTime" />
        <result column="question_author" property="questionAuthor" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        question_id, question_chapter, question_difficult, question_title, question_time, question_author
    </sql>

</mapper>
